<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_10">

        <LinearLayout
            android:id="@+id/ll_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bg1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/priority"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_5"
            android:paddingRight="@dimen/space_5">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_names"
                android:drawablePadding="@dimen/space_10"
                android:text="yz1309"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_pwd"
                android:drawablePadding="@dimen/space_10"
                android:paddingTop="@dimen/space_5"
                android:text="513021"
                android:textColor="@color/text_666"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oper" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">


        <TextView
            android:id="@+id/tv_key_mgmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_selector_r5_white_gray3"
            android:gravity="center"
            android:paddingBottom="@dimen/space_5"
            android:paddingTop="@dimen/space_5"
            android:text="加密方式：WPA-PSK"
            android:textColor="@color/gray2" />

        <View
            android:layout_width="@dimen/space_10"
            android:layout_height="@dimen/space_1" />

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_selector_r5_white_gray3"
            android:gravity="center"
            android:paddingBottom="@dimen/space_5"
            android:paddingTop="@dimen/space_5"
            android:text="频率：2048"
            android:textColor="@color/gray2" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10" />

</LinearLayout>